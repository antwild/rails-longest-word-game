<div class="container">

  <h1>New Game</h1>

  <ul>
    <% @letters.each do |letter| %>
    <li><%= letter.upcase %></li>
    <% end %>
  </ul>

  <p>What's the longest word that you can find?</p>
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters%>
    <input type="text" name="player" class="input-form">
    <input type="submit" class="input-form" id="submit">
  </form>

</div>
